// Component to display author info in the blog post
const AuthorInfo = ({ author }: { author: BlogPost['author'] }) => {
  // Get author ID based on name to link to author page
  const getAuthorId = (name: string): string => {
    // Simple conversion of author name to URL-friendly ID
    // In a real app, this would come from the CMS or API
    return name
      .toLowerCase()
      .replace(/\s+/g, '-')
      .replace(/[^\w\-]+/g, '')
      .replace(/\-\-+/g, '-')
      .replace(/^-+/, '')
      .replace(/-+$/, '');
  };

  const authorId = getAuthorId(author.name);

  return (
    <div className="flex items-center space-x-4 mb-8">
      <Link href={`/authors/${authorId}`} className="block relative w-12 h-12 rounded-full overflow-hidden flex-shrink-0">
        <Image
          src={author.image}
          alt={author.name}
          fill
          className="object-cover"
        />
      </Link>
      <div>
        <Link href={`/authors/${authorId}`} className="block">
          <h3 className="font-bold hover:text-primary-600 transition-colors">{author.name}</h3>
        </Link>
        {author.title && <p className="text-sm text-neutral-600">{author.title}</p>}
      </div>
    </div>
}
};

